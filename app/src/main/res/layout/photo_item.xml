<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewPhotoItem"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPhotoItemAlbumId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="AlbumId: "
        app:layout_constraintStart_toEndOf="@+id/imageViewPhotoItem"
        app:layout_constraintTop_toTopOf="@+id/imageViewPhotoItem" />

    <TextView
        android:id="@+id/textViewPhotoItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ID: "
        app:layout_constraintStart_toStartOf="@+id/textViewPhotoItemAlbumId"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhotoItemAlbumId" />

    <TextView
        android:id="@+id/textViewPhotoItemTitle"
        android:layout_width="@+id/imageViewPhotoItem"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Title: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewPhotoItem"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhotoItemId" />

</androidx.constraintlayout.widget.ConstraintLayout>